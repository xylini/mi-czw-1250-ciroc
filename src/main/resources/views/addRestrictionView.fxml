                     <content>
                        <VBox fx:id="scrollBox" prefHeight="133.0" prefWidth="400.0" spacing="10.0" />
                     </content>
                  </ScrollPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="okButton" layoutX="14.0" layoutY="239.0" mnemonicParsing="false" onAction="#okClicked" prefHeight="50.0" prefWidth="150.0" text="OK" />
