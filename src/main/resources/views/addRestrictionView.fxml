              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ComboBox fx:id="groupsListBox" layoutX="21.0" layoutY="21.0" prefHeight="26.0" prefWidth="375.0" />
