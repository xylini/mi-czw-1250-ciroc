            fx:controller="pl.edu.agh.timekeeper.controller.StatsController">
    <left>
        <Pane fx:id="listPane" prefHeight="370.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <VBox>
                <Button fx:id="overallButton" text="Overall Stats" textAlignment="CENTER"
